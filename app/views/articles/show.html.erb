<ul>
  <h1> <%= @article.title %> </h1>
  <li> <%= @article.content %></li>
  <li class="btn btn-primary"><%= link_to "Edit article", edit_article_path(@article.id) %></li>
    <li class="btn btn-primary"><%= link_to "Delete article", article_path(@article.id), method: :destroy, data: { confirm: "Are you sure you want to delete?" } %></li>
    <br>
  <li> <%= link_to "View next", article_path(@article.id+1) %></li>
  <li> <%= link_to "View previous", article_path(@article.id-1) %></li>
  <li> <%= link_to "View all", articles_path %></li>
  <br>
</ul>
